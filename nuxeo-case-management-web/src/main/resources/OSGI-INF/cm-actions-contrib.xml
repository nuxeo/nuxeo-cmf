      order="10">
      <category>DISTRIBUTION_CASE_ACTION_LIST</category>
      <filter-id>isCmCase</filter-id>
    </action>

    <action id="TAB_DISTRIBUTION_LISTS" link="/incl/tabs/document_content.xhtml"
